{% extends "_main.jinja" %}
{% block main%}

<h2>Přihlášení týmu</h2>

<form {{url_for('team_' ~ year ~ ".view_login")}} method="post">
	<div class="form-group row">
	<div class="form-group">
        {{ form.csrf_token }}
        {{ form.loginname.label }}
		 <div class="col-sm-10">
        {{ form.loginname(size=20, class="form-control") }}
		</div>
    </div>
     <div class="form-group row">
        {{ form.password.label }} 
		<div class="col-sm-10">
        {{ form.password(class="form-control") }}
		</div>
    </div>
    <button type="submit" class="btn btn-primary">Přihlásit</button>
</form>
{% endblock %}