{% extends "_main.jinja" %}
{% block main%}

<h2>Registrované týmy</h2>

<table class="table table-dark table-striped">
  <thead>
    <tr>
        <th>#</th>
        <th>Tým</th>
        <th>Hráči</th>
        <th>Startovné</th>
        <th>Stav</th>
    </tr>
  </thead>
  <tbody>
{% if teams %}
    {% for team in teams %}
    <tr>
        <th scope="row">{{ team.order}}</td>
        {% if team.weburl %}
          <td><A href="{{ team.weburl}}">{{ team.name}}</A></td>
        {% else %}
          <td>{{ team.name}}</td>
        {% endif %}
        
        <td>{{ team.players_public}}</td>
        <td>{{ team.zaplaceno}}</td>
        <td>{{ team.stav}}</td>
    </tr>
    {% endfor %}
{% endif %}
  </tbody>
</table>

{% endblock %}