{% extends "_main.jinja" %}
{% block main%}

<h2>Změna hesla</h2>

<form {{url_for('team' ~ year ~ ".view_password_change")}} method="post">
    {{ form.csrf_token }}
     <div class="form-group row">
        {{ form.password_old.label }} 
        <div class="col-sm-10">
        {{ form.password_old(class="form-control") }}
        </div>
    </div>
     <div class="form-group row">
        {{ form.password1.label }} 
        <div class="col-sm-10">
        {{ form.password1(class="form-control") }}
        </div>
    </div>

     <div class="form-group row">
        {{ form.password2.label }} 
        <div class="col-sm-10">
        {{ form.password2(class="form-control") }}
        </div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Změna hesla</button>
</form>
{% endblock %}