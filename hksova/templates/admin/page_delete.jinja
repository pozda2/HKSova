{%- extends "_main.jinja" -%}
{%- block main -%}

<h2>Zrušení stránky: {{ page.title }}</h2>
<form action="{{url_for('admin' ~ year.year ~ ".page_delete", idpage=page.idpage)}}" method="POST" >
    {{ form.csrf_token }}
     <div class="form-row">
        <div class="col">{{ form.agree.label}}</div>
        <div class="col">{{ form.agree() }}</div>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Smazat stránku</button>
    <button type="button"  class="btn btn-primary" onclick="history.back()">Zpět</button>
</form>
{%- endblock -%}