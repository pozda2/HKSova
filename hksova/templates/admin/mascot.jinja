{%- extends "_main.jinja" -%}
{%- block main -%}

<h2>Úprava maskota</h2>
<form action="{{url_for('admin' ~ year.year ~ ".edit_mascot", oldmascot=oldmascot.mascot)}}" method="post">
  {{ form.csrf_token }}
  <div class="form-row">
    <div class="col"><label for="inputParam">{{ form.mascot.label }}</label></div>
    <div class="col">{{ form.mascot(class="form-control", id="inputParam", placeholder="Maskot") }}
    </div>
  </div>
  <p><p>
  <button type="submit" class="btn btn-primary">Upravit maskota</button>
  <button type="button"  class="btn btn-primary" onclick="history.back()">Zpět</button>
</form>
{%- endblock -%}