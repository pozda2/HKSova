{% extends "_main.jinja" %}
{% block main%}

<h2>Správa týmů</h2>

<table class="table table-dark table-striped">
  <thead>
    <tr>
        <th>Id</th>
        <th>Tým</th>
        <th>Hráči</th>
        <th>Startovné</th>
        <th>Stav</th>
        <th>Akce</th>
    </tr>
  </thead>
  <tbody>
{% if teams %}
    {% for team in teams %}
    <tr>
        <th scope="row">{{ team.idteam}}</td>
        {% if team.weburl %}
          <td><A href="{{ team.weburl}}">{{ team.name}}</A></td>
        {% else %}
          <td>{{ team.name}}</td>
        {% endif %}
        
        <td>{{ team.players_private}}</td>
        <td>{{ team.zaplaceno}}</td>
        <td>{{ team.stav}}</td>
        <td>
            <a href="{{ url_for('admin' ~ year.year ~ '.view_admin_team', idteam=team.idteam) }}"><img alt="=Úprava" src={{url_for("static", filename="img/edit.gif")}}></a>
        </td>
    </tr>
    {% endfor %}
{% endif %}
  </tbody>
</table>

{% endblock %}