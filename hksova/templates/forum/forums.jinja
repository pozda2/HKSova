{% extends "_main.jinja" %}
{% block main%}

<h2>Fórum</h2>
<table id="table" class="table-dark table-striped" data-toggle="table" data-filter-control="true" data-click-to-select="true">
  <thead>
    <tr>
        <th data-field="section-name" data-sortable="true"  data-formatter="forumFormatter">Sekce</th>
        <th data-field="section-url"  data-visible="false" >Sekce</th>
        <th data-field="section-time">Poslední příspěvek</th>
    </tr>
  </thead>
  <tbody>
{% if sections %}
    {% for section in sections %}
    <tr>
        <td>{{ section.section}}</td>
        <td>{{ url_for('forum' ~ year.year ~ '.view_forum', section_id= section.idforumsection) }}</td>
        <td>{{ section.last_post}}</td>
    </tr>
    {% endfor %}
{% endif %}
  </tbody>
</table>
{% endblock %}