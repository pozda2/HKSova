<div class="dashboard-nav">
    <header>
        <a href="#!" class="menu-toggle"><img src={{url_for("static", filename="img/bars.png")}}></a>
        <a href="/" class="brand-logo"><img src={{url_for("static", filename="img/sova_bila_mala.png")}} title="Logo Hradecká sova" alt="Logo Hradecká sova" /></a>
    </header>

    <nav class="dashboard-nav-list">
        {% if session.org %}
            <div class='dashboard-nav-dropdown'><a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle"></i> Administrace </a>
            <div class='dashboard-nav-dropdown-menu'>
                <a href="{{ url_for('admin' ~ year.year ~ '.view_admin_pages') }}" title="Správa stránek" class="dashboard-nav-item">Správa stránek</a>
                <a href="{{ url_for('admin' ~ year.year ~ '.view_admin_menu') }}" title="Správa menu" class="dashboard-nav-item">Správa menu</a>
            </div>
            </div>
        {% endif %}

        {% if menu %}
            {% set ns = namespace(group=false) %}
            {% for item in menu if not (year.is_current_year==False and item.iscurrentyear == 1) %}
                {% if (session.org or item.ispublic or (item.isprivate==1 and session.logged) or (item.isprivate==2 and session.logged and session.isbackup==0) or (item.isprivate==3 and session.logged and session.ispaid))  %}
                    {% if session.org or item.isvisible %}
                        {% if item.link is none %} 
                            {% if ns.group %} </div></div> {% endif %}
                                <div class='dashboard-nav-dropdown'><a hr   ef="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle">{{item.menu}}</a><div class='dashboard-nav-dropdown-menu'>
                            {% set ns.group = True %}
                        {% else %}
                            {% if item.isnewpart %} 
                                {% if ns.group %} </div></div>{% set ns.group = False %} {% endif %}
                            {% endif %}
                            {% if item.blueprint %}
                                {% if item.function == "view_page" %}
                                    <a href={{ url_for(item.blueprint ~ year.year ~ '.' ~ item.function, pageurl=item.link) }} class="dashboard-nav-item">{{item.menu}}</a>
                                {% else %}
                                    {% if not session.logged or (session.logged and item.function != 'login_team' and item.function != 'view_registration') %}
                                        {% if not session.org or (session.logged and item.function != 'view_team' and item.function != 'view_password_change' and item.function != 'view_registration_cancel') %}
                                            <a href={{ url_for(item.blueprint ~ year.year ~ '.' ~ item.function) }} class="dashboard-nav-item">{{item.menu}}</a>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            {% else %}
                                <a href={{item.link}} class="dashboard-nav-item">{{item.menu}}</a>
                            {% endif %}
                        {% endif %} 
                    {% endif %} 
                {% endif %} 
            {% endfor %}
            {% if ns.group %} </div></div>{% endif %}
        {% endif %}

        <div class='dashboard-nav-dropdown'><a href="#!" class="dashboard-nav-item dashboard-nav-dropdown-toggle"></i> Ročníky </a>
        <div class='dashboard-nav-dropdown-menu'>
          <a href="{{ url_for('main2022.view_index') }}" title="informace o hře" class="dashboard-nav-item">Ročník 2022 </a>
          <a href="{{ url_for('main2021.view_index') }}" title="informace o hře" class="dashboard-nav-item">Ročník 2021 </a>
        </div>
        </div>
    </nav>
</div>

